<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_app_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/viewBackground"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"

      >
    <TextView
        android:id="@+id/tv_left_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/leftScaleColor"

        />
    <TextView
        android:id="@+id/tv_right_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/rightScaleColor"
        />
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/common_shape"
      />
  <ImageView
      android:id="@+id/iv_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      />
  <TextView
      android:id="@+id/tv_app_name"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_toRightOf="@+id/iv_icon"
      android:gravity="center_vertical"
      android:text="test"
      android:textSize="15sp"
      android:textColor="@color/textColorPrimary"
      />
  <TextView
      android:id="@+id/tv_app_time"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:paddingRight="15dp"
      android:text="test"
      android:textSize="15sp"
      android:textColor="@color/textColorPrimary"
      />

</RelativeLayout>